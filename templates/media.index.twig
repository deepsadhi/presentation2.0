      <div class="row">
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>#</th>
              <th>File name</th>
              <th>File size</th>
              <th>Modified on</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            {% set i = 1 %}
            {% for file in files %}
            <tr>
              <td>{{ i }}</td>
              {% if active_page == 'home' %}
              <td><a href="{{ path_for('edit', {'file': file.name}) }}">{{ file.name }}</a></td>
              {% endif %}
              {% if active_page == 'media' %}
              <td><a target="_blank" href="/media/{{ file.name }}">{{ file.name }}</a></td>
              {% endif %}
              <td>{{ file.size }}</td>
              <td>{{ file.date }}</td>
              <td>
                {% if active_page == 'home' %}
                <a href="edit" class="btn btn-primary btn-xs">edit</a>
                <a class="btn btn-danger btn-xs" data-target="#confirm-delete" data-toggle="modal" data-file="{{ file.name }}" data-path="markdown" href="#">Delete</a>
                {% endif %}
                {% if active_page == 'media' %}
                <a class="btn btn-danger btn-xs" data-target="#confirm-delete" data-toggle="modal" data-file="{{ file.name }}" data-path="media" href="#">Delete</a>
                {% endif %}
              </td>
            </tr>
            {% set i = i + 1 %}
            {% endfor %}
          </tbody>
        </table>
      </div>
