{% extends "layout.twig" %}

{% block navbar %}
{% include 'navbar.twig' %}
{% endblock %}

{% block content %}

    <!-- Begin page content -->
    <div class="container">

      {% include "flash.twig" %}

      <div class="row">
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>#</th>
              <th>File name</th>
              <th>File size</th>
              <th>Modified on</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            {% set i = 1 %}
            {% for file in files %}
            <tr>
              <td>{{ i }}</td>
              <td>{{ file.name }}</td>
              <td>{{ file.size }}</td>
              <td>{{ file.date }}</td>
              <td>
                <a href="edit" class="btn btn-primary btn-xs">edit</a>
                <a class="btn btn-danger btn-xs" data-target="#confirm-delete" data-toggle="modal" data-file="{{ file.name }}" data-path="markdown" href="#">Delete</a>
              </td>
            </tr>
            {% set i = i + 1 %}
            {% endfor %}
          </tbody>
        </table>
      </div>

    </div> <!-- /container -->

    {% include "dialogbox.twig" %}


{% endblock %}

{% block js %}
    <script src="/js/app.js"></script>
{% endblock %}
