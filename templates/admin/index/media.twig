      <div class="row">
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>#</th>
              <th>File name</th>
              <th>URL to include media in presentation</th>
              <th>File size</th>
              <th>Modified on</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            {% set i = 1 %}
            {% for file in files %}
            <tr>
              <td>{{ i }}</td>
              <td><a target="_blank" href="media/{{ file.name }}">{{ file.name }}</a></td>
              <td>media/{{ file.name }}</td>
              <td>{{ file.size }}</td>
              <td>{{ file.date }}</td>
              <td>
                <a class="btn btn-danger btn-xs" data-target="#confirm-delete" data-toggle="modal" data-file="{{ file.name }}" data-path="media" href="#">Delete</a>
              </td>
            </tr>
            {% set i = i + 1 %}
            {% endfor %}
          </tbody>
        </table>
      </div>
