{% extends "layout.twig" %}

{% block navbar %}
{% include "admin/partials/navbar.twig" %}
{% endblock %}

{% block content %}

    <!-- Begin page content -->
    <div class="container">
        <div class="col-lg-10 col-md-offset-1">
          <div class="row">
            <form class="form-horizontal" action="{{ path_for('edit', {'file': file_name}) }}" method="POST" enctype="multipart/form-data">
              <input type="hidden" value="{{ csrf_value }}" name="{{ csrf_name }}">
              <input type="hidden" name="_METHOD" value="PUT">
              <fieldset>

                {% include "admin/alert/form.twig" %}

                <div class="{{ form.invalid_input.title ? 'has-error' : '' }}">
                  <label class="control-label">Presentation file</label>
                  <div>
                    <strong>{{ file_name }}</strong>
                  </div>
                </div>
                <div class="{{ form.invalid_input.content ? 'has-error' : '' }}">
                  <label class="control-label">Enter presentation contents in Markdown syntax</label>
                  <div>
                    <textarea class="form-control" name="content" rows="10">{{ form.input_value.content ?? '' }}</textarea>
                    {% if form.input_message.content %}
                      <span class="help-block">
                          <strong>{{ form.input_message.content }}</strong>
                      </span>
                    {% endif %}
                    <span>
                      Write presentation content in
                      <a target="_blank" href="http://daringfireball.net/projects/markdown/">Markdown</a>,
                      <a target="_blank" href="https://help.github.com/categories/writing-on-github/">GitHub flavored Markdown</a> or
                      <a target="_blank" href="https://michelf.ca/projects/php-markdown/extra/">Markdown with Extra extension</a> <br>
                      For more details check <a href="../presentation/presentation2_0_md/show">User Guide</a> section and <a href="http://parsedown.org/" target="_blank">Prasedown</a>.
                    </span>
                  </div>
                </div>

                <div>
                  <label></label>
                  <div>
                    <button class="btn btn-primary" type="submit">Update</button>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>
        </div>
    </div> <!-- /container -->


{% endblock %}
